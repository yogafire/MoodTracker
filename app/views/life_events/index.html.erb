<p id="notice"><%= notice %></p>

<h1>Life Events</h1>

<table>
  <thread>
    <tr>
      <th><strong>Day</strong></th>
      <th><strong>Happiness</strong></th>
      <th><strong>Description</strong></th>
      <th colspan="3"></th>
    </tr>
  </thread>

  <tbody>
    <% @life_events.each do |life_event| %>
      <tr>
        <td><%= life_event.day %></td>
        <td align="center"><%= life_event.happiness %></td>
        <td><%= life_event.description %></td>
        <td><%= link_to 'Show', life_event %></td>
        <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
        <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Life event', new_life_event_path %>


